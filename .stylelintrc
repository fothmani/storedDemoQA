{
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["**/bootstrap-grid/**", "lib/modules/apostrophe-assets/public/css/main.css"],
  "rules": {
    "selector-type-no-unknown": null,
    "selector-list-comma-newline-after": null,
    "selector-pseudo-element-colon-notation": "single",
    "declaration-empty-line-before": [null, ignore: ["after-comment", "inside-single-line-block"]],
    "declaration-block-single-line-max-declarations": 2,
    "color-hex-case": "lower",
    "no-eol-whitespace": [null, ignore: ["empty-lines"]],
    "rule-empty-line-before": ["always", ignore: ["inside-block"]],
    "no-missing-end-of-source-newline": true,
    "no-empty-source": true,
    "at-rule-empty-line-before": never
  }
}
